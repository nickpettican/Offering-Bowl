{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2020",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./src/_types"]
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "jest.setup.ts",
        "__mocks__",
        "aws"
    ],
    "exclude": ["node_modules", "dist"]
}
